---
import "@fontsource-variable/jetbrains-mono";
import "@fontsource/aileron/400.css";
import "@fontsource/aileron/700.css";
import "@fontsource/aileron/800.css";

import Scrollify from "../components/common/scrollify.astro";
import BackToTop from "../components/common/back-to-top.astro";
import Background from "../components/common/background.astro";
import LoadingScreen from "../components/common/loading-screen.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-pt-[64px] overflow-x-hidden scroll-smooth antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

    <!--==================== OPEN GRAPH META TAGS (FOR SOCIAL MEDIA PREVIEW) ===================== -->
    <!-- Facebook -->
    <meta property="og:title" content="Emmanuel P. Barrameda - Portfolio" />
    <meta property="og:description" content="Portfolio website of Emmanuel P. Barrameda." />
    <meta property="og:image" content="https://i.imgur.com/ceRkZe6.png" />
    <meta property="og:url" content="https://emmanpbarrameda.github.io/" />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Emmanuel P. Barrameda - Portfolio" />
    <meta name="twitter:description" content="Portfolio website of Emmanuel P. Barrameda." />
    <meta name="twitter:image" content="https://i.imgur.com/ceRkZe6.png" />
    <meta name="twitter:url" content="https://emmanpbarrameda.github.io/" />

    <!-- Discord -->
    <meta property="twitter:site" content="@emmanpbarrameda" />
    <meta property="twitter:creator" content="@emmanpbarrameda" />
    <meta property="twitter:title" content="Emmanuel P. Barrameda - Portfolio" />
    <meta property="twitter:description" content="Portfolio website of Emmanuel P. Barrameda." />
    <meta property="twitter:image" content="https://i.imgur.com/ceRkZe6.png" />

    <!-- Google -->
    <meta itemprop="name" content="Emmanuel P. Barrameda - Portfolio" />
    <meta itemprop="description" content="Portfolio website of Emmanuel P. Barrameda." />
    <meta itemprop="image" content="https://i.imgur.com/ceRkZe6.png" />

    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>

  <body class="bg-neutral-950 font-aileron text-neutral-50">
    <!-- Loading Screen -->
    <LoadingScreen />

    <!-- Content -->
    <Scrollify />
    <slot />
    <Background />
    <BackToTop />

    <!-- Intersection Observer -->
    <script is:inline defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>

    <!-- Page Load Script to Hide Loader -->
    <script is:inline>
      window.addEventListener("load", () => {
        const loader = document.getElementById("loading-screen");
        if (loader) {
          loader.style.opacity = "0";
          loader.style.pointerEvents = "none";
          setTimeout(() => loader.remove(), 500);
        }
      });
    </script>
  </body>
</html>
