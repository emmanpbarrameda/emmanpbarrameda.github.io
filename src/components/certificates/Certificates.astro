---

<section
  id="certificates"
  class="mx-auto mt-28 flex max-w-screen-md flex-col items-center gap-5 px-4 pt-4"
>
  <SectionTitle>Certificates</SectionTitle>
  <p class="max-w-[500px] text-center text-neutral-400">
    A showcase of my recognitions and achievements throughout my academic and professional journey.
  </p>

  <div class="mt-6 grid w-full grid-cols-1 gap-8">
    {/* Always show first certificate */}
    <CertificateCard
      type={certificates[0].type}
      title={certificates[0].title}
      description={certificates[0].description}
      image={certificates[0].img}
      url={certificates[0].url}
      alt={certificates[0].title}
      badges={certificates[0].badges}
      className="intersect:slide-in-from-bottom-12"
    />

    {/* Collapsible section for remaining certificates */}
    <div x-data="{ showAll: false }" class="space-y-8">
      <div
        x-show="showAll"
        x-collapse
        class="grid grid-cols-1 gap-8"
      >
        {certificates.slice(1).map((cert, index) => (
          <CertificateCard
            type={cert.type}
            title={cert.title}
            description={cert.description}
            image={cert.img}
            url={cert.url}
            alt={cert.title}
            badges={cert.badges}
            className={`intersect:slide-in-from-bottom-12 intersect:delay-${(index + 1) * 150}`}
          />
        ))}
      </div>

      {/* Updated Toggle button with new style */}
      <div class="mt-8 w-full text-center">
        <button
          @click="showAll = !showAll"
          class="mx-auto inline-flex items-center justify-center gap-2 rounded-lg bg-gradient-to-r from-sky-400 via-cyan-500 to-blue-600 px-6 py-3 text-center font-jetbrains font-bold text-white transition-all duration-200 hover:brightness-110 hover:scale-105 hover:shadow-lg hover:shadow-sky-400/25 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-offset-2 focus:ring-offset-gray-900"
        >
          <span x-text="showAll ? 'showLessCertificates();' : 'showAllCertificates();'"></span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="h-5 w-5 transition-transform duration-300"
            :class="{ 'rotate-180': showAll }"
          >
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
              clip-rule="evenodd"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>