---
// quote-section.astro
import { Icon } from "astro-icon/components";
---

<section class="mt-24 mb-30 w-full px-4 text-center font-jetbrains text-neutral-300">
  <div class="transition-all duration-300 ease-in-out mx-auto max-w-4xl space-y-4">
    <!-- Quote Block -->
    <blockquote class="relative text-2xl md:text-3xl lg:text-4xl font-light leading-snug tracking-tight transition-all duration-300 ease-in-out hover:scale-[1.01] cursor-default">
      <!-- Huge faded opening quote -->
      <span class="absolute -top-20 left-1/2 -translate-x-1/2 text-[9rem] text-sky-600 opacity-15 select-none leading-none intersect:fade-in-0 intersect:slide-in-from-right-12"> â€œ </span>

      <!-- Enhanced Quote -->
      <span class="block transition-all duration-300 ease-in-out intersect:duration-700 intersect:animate-in intersect:fade-in-0 intersect:slide-in-from-top-12">
        <span class="text-neutral-400 italic">Turning</span>
        <span class="font-bold text-white"> ideas into </span>
        <br />
        <span class="font-bold text-white">real-world </span>
        <span class="relative inline-block">
          <span class="inline-block rounded px-2 py-1 bg-gradient-to-r from-sky-400 via-cyan-500 to-blue-600 text-white font-bold italic transition-all duration-300 ease-in-out hover:brightness-110 hover:scale-105 hover:drop-shadow-[0_0_8px_rgba(56,189,248,0.7)]"> solutions. </span>
          <span class="absolute bottom-0 left-1/2 w-2/3 h-0.5 -translate-x-1/2 bg-white/30 rounded-full"></span>
        </span>
      </span>
    </blockquote>

    <!-- Separator -->
    <hr class="mt-6 border-t border-neutral-700 w-1/3 mx-auto opacity-50 transition-all duration-300 ease-in-out intersect:fade-in-0 intersect:slide-in-from-bottom-12" />
  </div>
</section>
