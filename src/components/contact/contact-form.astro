<form
  action="https://formspree.io/f/xldnnzgn"
  method="POST"
  class="flex w-full flex-col gap-4 font-jetbrains"
  onsubmit="
    const email = this.email.value.trim();
    const message = this.message.value.trim();
    if (!email || !message) {
      alert('Please fill in both your email and your message.');
      return false;
    }
    return true;
  "
>
  <input type="hidden" name="subject" value="PORTFOLIO CONTACT" />

  <!-- Email Input -->
  <div class="flex flex-col gap-1">
    <label for="email" class="font-aileron font-bold">
      <span class="font-jetbrains text-sky-400">#</span> Your Email:
    </label>
    <input
      id="email"
      name="email"
      type="email"
      required
      placeholder="Write your email here..."
      class="rounded-md border border-neutral-800 bg-neutral-900 px-4 py-2 text-neutral-400 placeholder-neutral-700 focus:border-sky-400 focus:ring-sky-400"
    />
  </div>

  <!-- Message Textarea -->
  <div class="flex flex-col gap-1">
    <label for="message" class="font-aileron font-bold">
      <span class="font-jetbrains text-sky-400">#</span> Your Message:
    </label>
    <textarea
      id="message"
      name="message"
      rows="6"
      required
      placeholder="Write your message here..."
      class="rounded-md border border-neutral-800 bg-neutral-900 px-4 py-2 text-neutral-400 placeholder-neutral-700 focus:border-sky-400 focus:ring-sky-400"
    ></textarea>
  </div>

  <!-- Submit Button & Resume Link -->
  <div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row sm:justify-normal">
    <button
      type="submit"
      class="grid w-full rounded bg-gradient-to-br from-sky-400 via-cyan-500 to-blue-600 px-4 py-2 font-jetbrains font-bold text-white transition hover:brightness-90 sm:w-fit shadow-md"
    >
      submitMessage();
    </button>

    <a
      href="https://github.com/emmanpbarrameda/EMMANPBARRAMEDA_RESUME/blob/main/RESUME/EMMANPBARRAMEDA_RESUME.pdf"
      target="_blank"
      class="group flex gap-1 font-jetbrains"
    >
      <span aria-hidden="true" class="text-sky-400">[</span>
      <span class="flex items-center gap-1 underline-offset-2 group-hover:underline">
        Download My Resume
      </span>
      <span aria-hidden="true" class="text-sky-400">]</span>
    </a>
  </div>
  
</form>

