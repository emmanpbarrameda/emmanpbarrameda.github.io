---
import SectionTitle from "../common/section-title.astro";
import EmailIcon from "../icons/email-icon.astro";
import GithubIcon from "../icons/github-icon.astro";
import LinkedinIcon from "../icons/linkedin-icon.astro";
import CalIcon from "../icons/cal-icon.astro";
import ContactForm from "./contact-form.astro";
import InfoItem from "./info-item.astro";
import { infos } from "../../data/infos.js";
---

<section id="contact" class="mx-auto mt-28 flex max-w-screen-md flex-col items-center gap-5 px-4 pt-4">
  <SectionTitle>Get In Touch</SectionTitle>
  <p class="col-span-4 max-w-[400px] text-pretty text-center text-neutral-400">Have a project in mind or looking for a developer who gets things done? Let's connect! I'm open for freelance work!</p>
  <div class="flex w-full flex-col-reverse gap-6 sm:flex-row sm:gap-2">
    <ContactForm />
    <ul class="flex flex-col gap-4 text-neutral-400">
      <InfoItem title="Email" name={infos.email} href={`mailto:${infos.email}`}>
        <EmailIcon width={36} height={36} />
      </InfoItem>

      <InfoItem title="Github" name={infos.githubtext} href={infos.github}>
        <GithubIcon width={36} height={36} />
      </InfoItem>

      <InfoItem title="LinkedIn" name={infos.linkedintext} href={infos.linkedin}>
        <LinkedinIcon width={36} height={36} />
      </InfoItem>

      <InfoItem title="Book a Meeting with Me" name={infos.calmeetingtext} href={infos.calmeeting}>
        <CalIcon width={36} height={36} />
      </InfoItem>
    </ul>
  </div>
</section>
