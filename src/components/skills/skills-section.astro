import SectionTitle from "../common/section-title.astro";
import SkillItem from "./skill-item.astro";

const skills = [
  { name: "PHP", img: "/skills/php.svg" },
  { name: "FilamentPHP", img: "/skills/filamentphp.png" },
  { name: "Tailwind", img: "/skills/tailwind.svg" },
  { name: "AlpineJS", img: "/skills/alpine.svg" },
  { name: "Laravel", img: "/skills/laravel.svg" },
  { name: "Livewire", img: "/skills/livewire.svg" },
  { name: "Java", img: "/skills/java.svg" },
  { name: "VB.NET", img: "/skills/vb.net.svg" },
  { name: "C", img: "/skills/c.svg" },
  { name: "C++", img: "/skills/c++.svg" },
  { name: "Unity C#", img: "/skills/unity.svg" },
  { name: "Android Studio", img: "/skills/android.svg" },
  { name: "HTML", img: "/skills/html.svg" },
  { name: "CSS", img: "/skills/css.svg" },
  { name: "Bootstrap", img: "/skills/bootstrap.svg" },
  { name: "JavaScript", img: "/skills/javascript.svg" },
  { name: "MySQL", img: "/skills/mysql.svg" },
  { name: "PuTTy", img: "/skills/putty.svg" },
  { name: "Git", img: "/skills/git.svg" },
  { name: "GitHub", img: "/skills/github.svg" },
  { name: "Postman", img: "/skills/postman.svg" },
  { name: "Docker", img: "/skills/docker.svg" },
  { name: "Figma", img: "/skills/figma.svg" },
  { name: "Photoshop", img: "/skills/photoshop.svg" }
];
---

<style is:inline>
  .scroll-track {
    animation: scroll-left 40s linear infinite;
    will-change: transform;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .marquee-wrapper:hover .scroll-track {
    animation-play-state: paused;
  }

  .marquee-wrapper {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .marquee-wrapper::-webkit-scrollbar {
    display: none;
  }
</style>

<section id="skills" class="mx-auto mt-28 flex max-w-screen-lg flex-col items-center gap-6 px-4 pt-4">
  <SectionTitle>Skills</SectionTitle>

  <p class="max-w-[640px] text-center text-neutral-400 text-sm sm:text-base">
    Programming Languages, Tools, and Platforms I'm <b>Familiar</b> With
  </p>

  <div class="marquee-wrapper relative w-full overflow-x-auto overflow-y-hidden py-6 intersect:animate-in intersect:fade-in-20 intersect:slide-in-from-right-12">
    <div class="flex w-max gap-0 px-4 scroll-track">
      {[...skills, ...skills].map((skill, index) => <SkillItem name={skill.name} img={skill.img} key={index} />)}
    </div>
  </div>
</section>
