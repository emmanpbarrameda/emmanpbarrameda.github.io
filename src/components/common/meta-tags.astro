---
import { infos } from "../../data/infos.js";

interface Props {
  title?: string;
  description?: string;
  url?: string; 
  image?: string;
}

const {
  title = infos.og_title,
  description = infos.og_description,
  url = infos.host,
  image = infos.og_image,
} = Astro.props;
---

<!-- icon and main title -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />

<meta name="generator" content={Astro.generator} />
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

<!-- Canonical -->
<link rel="canonical" href={url} />

<!-- RSS + Sitemap -->
<link rel="alternate" type="application/rss+xml" title={`${infos.fullname} Blog RSS`} href="/rss.xml" />
<link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap-index.xml" />

<!--==================== OPEN GRAPH META TAGS (FOR SOCIAL MEDIA PREVIEW) ===================== -->
<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />
<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:site_name" content={`${infos.fullname} Portfolio`} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
<meta name="twitter:site" content={`@${infos.username}`} />
<meta name="twitter:creator" content={`@${infos.username}`} />

<!-- Google -->
<meta itemprop="name" content={title} />
<meta itemprop="description" content={description} />
<meta itemprop="image" content={image} />

<!-- SEO -->
<meta name="description" content={description} />
<meta name="author" content={infos.fullname} />
<meta name="robots" content="index" />


<!-- Google Search Console Verification -->
<!-- https://search.google.com/search-console/about VERIFICATION -->
<meta name="google-site-verification" content="BvLhWKwhecxLYc5G0eZb0XKjIe-GfPD7R_Ly5BxIGZw" />

<!-- Structured Data -->
<script is:inline type="application/ld+json">
  {JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Website",
    name: title,
    description,
    url,
    image,
  })}
</script>